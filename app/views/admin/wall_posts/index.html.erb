<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">댓글 목록</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>번호</th>
              <th>참여자</th>
              <th>참여 댓글</th>
            </tr>
          </thead>
          <tbody>
            <% @wall_posts.each do |wall_post| %>
              <tr class="">
                <td>
                  <% unless wall_post.user.nil? %>
                    <%= link_to(wall_post.id, "https://developers.facebook.com/tools/explorer", title: wall_post.user.uid) %>
                  <% else %>
                    <%= wall_post.id %>
                  <% end %>
                </td>
                <td>
                  <% unless wall_post.user.nil? %>
                    <%= link_to image_tag(wall_post.user.profile_image), "https://facebook.com/#{wall_post.user.uid}", target: "_blank", title: wall_post.user.token.access_token %>
                    <%= wall_post.user.name %>
                  <% end %>
                </td>
                <td class="message">
                  <p><%= wall_post.message %></p>
                  <p><%= wall_post.created_at.strftime("%m-%d") %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
