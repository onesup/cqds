<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">참여자 목록</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>번호</th>
              <th>참여자</th>
              <th>생년월일</th>
              <th>지역</th>
              <th>타고온 곳</th>
              <th>참여일시</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="">
                <td>
                  <%= link_to(user.id, nil, title: user.uid) %>
                </td>
                <td>
                  <%= link_to image_tag(user.profile_image), "https://facebook.com/#{user.uid}", target: "_blank" %>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.age unless user.age.nil? %>
                </td>
                <td>
                  <%= user.location unless user.location.nil? %>
                </td>
                <td>
                  <%= user.data unless user.data.nil? %>
                </td>
                <td class="updated_at">
                  <p><%= user.updated_at.strftime("%m.%d %H:%M:%S") %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
