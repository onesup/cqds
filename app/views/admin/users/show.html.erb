<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">"<%= @user.email %>" 회원 정보 보기</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal">
                  <fieldset>
                    <legend>기본정보</legend>
                    <div class="control-group">
                      <label class="control-label" for="focusedInput">이름</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @user.name %></span>
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">이메일</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @user.email %></span>
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">전화번호</label>
                      <div class="controls">
                        <span class="input-xlarge uneditable-input"><%= @user.phone_number %></span>
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">페이스북 아이디</label>
                      <div class="controls">
                        <%= link_to "https://facebook.com/#{@user.uid}", "https://facebook.com/#{@user.uid}", target: "_blank" %></span>
                      </div>
                    </div>

                    <div class="control-group">
                      <label class="control-label">가입일시</label>
                      <div class="controls">
                        <span class=""><%= @user.created_at %></span>
                      </div>
                    </div>

                    <div class="form-actions">
                      <%= link_to "정보수정", edit_admin_user_path(@user), class: "btn btn-primary"%>
                      <!-- <button type="submit" class="btn btn-primary">Modify</button> -->
                      <%= link_to "사용자 전체 목록", admin_users_path, class: "btn"%>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>