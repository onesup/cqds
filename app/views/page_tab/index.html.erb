			<a href="#ex1" rel="modal:open"> <img src='<%= asset_path("page_tab/CQDS/donation.jpg") %>'/></a>
		</div>
	</div>
	<div class="cqds_down_field">
		<ul class="down_select_button">
				<li class="down_select_button01">
					<%= image_tag asset_path("page_tab/CQDS/ring.png") %> </li>
				<li class="down_select_button02">
					<%= image_tag asset_path("page_tab/CQDS/notify.png") %></li>
		</ul>
	</div>	
</div>

