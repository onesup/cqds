<script type="text/javascript">
  function changeFocus(pos) {
  	if(pos==1) { 
  		document.getElementById("youtube").src="//www.youtube.com/embed/hAa0OTP9eWE?wmode=opaque" ;
  		document.getElementById("youtube_01").src='<%= asset_path("page_tab/CQDS/tvcf_c.png") %>' ;
    	document.getElementById("youtube_02").src='<%= asset_path("page_tab/CQDS/interview.png") %>' ;
    }
    else if(pos==2) {
    	document.getElementById("youtube").src="//www.youtube.com/embed/lO18Q7qkCRM?wmode=opaque" ;
    	document.getElementById("youtube_01").src='<%= asset_path("page_tab/CQDS/tvcf.png") %>' ;
    	document.getElementById("youtube_02").src='<%= asset_path("page_tab/CQDS/interview_c.png") %>' ;
  	}
  }
</script>

<div class="cqds_wrap">
	<!--background -->	
	<div class="cqds_youtube">
		<div class="cqds_youtube_select">
			<ul class="youtube_select_button">
				<li class="youtube_select_button01">
					<img id='youtube_01' src='<%= asset_path("page_tab/CQDS/tvcf_c.png") %>' onclick='changeFocus(1);'/> 
        </li>
				<li class="youtube_select_button02">
					<img src='<%= asset_path("page_tab/CQDS/interview.png") %>' id='youtube_02' onclick='changeFocus(2);'/> 
        </li>
			</ul>
		</div>
		<div class="cqds_youtube_view">
			<iframe id="youtube" width="557" height="309" src="//www.youtube.com/embed/hAa0OTP9eWE?wmode=opaque" frameborder="0" allowfullscreen></iframe>
		</div>
		<div class="cqds_donate">
			<a href="#" id="event_popup"> 
        <%= image_tag "page_tab/CQDS/donation.jpg" %>
      </a> 
		</div>
	</div>
	<div class="cqds_down_field">
		<ul class="down_select_button">
				<li class="down_select_button01">
          <a href="<%= asset_path("cqds-rcm-coloring.mp4.7z")%>" class="coloring" target="_blank">
					  <%= image_tag "page_tab/CQDS/ring.png" %> 
          </a>
        </li>
				<li class="down_select_button02">
          <a href="<%= asset_path("cqds-rcm-bizring.mp4.7z")%>" class="alram" target="_blank">
            <%= image_tag "page_tab/CQDS/notify.png" %>
          </a>
        </li>
		</ul>
	</div>	
</div>

